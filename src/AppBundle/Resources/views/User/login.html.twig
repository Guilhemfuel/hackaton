{% extends 'base.html.twig' %}

{% block body %}
    <div id="formulaire">
        <h2>Connexion</h2>
        <div id="formcenter">
            {{ form_start(form) }}

            {{ form_label(form.email) }}<br />
            {{ form_errors(form.email) }}<br />
            {{ form_widget(form.email) }}<br />

            {{ form_label(form.password) }}<br />
            {{ form_errors(form.password) }}<br />
            {{ form_widget(form.password) }}<br />

            <br />

            {{ form_widget(form.submit) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}